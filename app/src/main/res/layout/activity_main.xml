<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <Button
                android:id="@+id/customXmlBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="CustomXMLActivity"
                android:textAllCaps="false"
                android:textSize="15sp" />


            <Button
                android:id="@+id/swithBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="切换成手写代码模式"
                android:textAllCaps="false"
                android:textSize="15sp" />

            <Button
                android:id="@+id/valueAnimatorBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="ValueAnimator"
                android:textAllCaps="false"
                android:textSize="15sp" />

            <Button
                android:id="@+id/valueAnimInterpolatorBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="自定义插值器(ValueAnimator)"
                android:textAllCaps="false"
                android:textSize="15sp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
